<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DemoButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#646f7c</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="AllStyles">

        <item name="android:opacity">opaque</item>
        <item name="android:colorBackground">#d2383f</item>

        <item name="android:strokeWidth">10</item>
        <item name="android:strokeColor">#767474</item>

        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>

        <item name="android:drawableStart">@drawable/ic_airplanemode_inactive_black_24dp</item>
        <item name="android:drawableEnd">@drawable/ic_airplanemode_inactive_black_24dp</item>

    </style>

    <style name="coloredBackground">
        <item name="android:colorBackground">#f002</item>
    </style>

    <style name="coloredText">
        <item name="android:textColor">#ff22</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="coloredBoldText">
        <item name="android:textColor">#FF5A5F</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="customFont">
        <item name="android:textColor">#FF5A5F</item>
        <item name="android:fontFamily">@font/dosis</item>
    </style>

    <style name="cornerRadius5Dp">
        <item name="android:radius">5dp</item>
    </style>

    <style name="drawableStart">
        <item name="android:drawableStart">@drawable/ic_airplanemode_inactive_black_24dp</item>
    </style>

    <style name="drawableEnd">
        <item name="android:drawableEnd">@drawable/ic_airplanemode_inactive_black_24dp</item>
    </style>

    <style name="drawableStartEnd">
        <item name="android:drawableStart">@drawable/ic_airplanemode_inactive_black_24dp</item>
        <item name="android:drawableEnd">@drawable/ic_airplanemode_inactive_black_24dp</item>
    </style>

    <style name="coloredStroke">
        <item name="android:strokeWidth">10</item>
        <item name="android:strokeColor">#ff00</item>
    </style>

    <style name="emptyStyle" />

</resources>
